{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "types": ["node"],
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".", // ✅ Add this line
    "paths": {
      "@/*": ["*"] // ✅ No need for ./src/* if baseUrl is already src
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts", 
    "**/*.ts", 
    "**/*.tsx", 
    ".next/types/**/*.ts",
     "next.config.ts", "../server/src/configurations/substances/substances.controller.ts"  ],
  "exclude": ["node_modules"]
}
